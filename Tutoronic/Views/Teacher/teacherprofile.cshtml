@using Tutoronic.Models;
@{ Layout = "~/Views/Shared/_Layout_admin.cshtml";
    Model1 db = new Model1();
    Teacher tch = new Teacher();
    if (Session["tch"] != null)
    {
        tch = (Teacher)Session["tch"];
    }
}
<div class="db-breadcrumb">
    <h4 class="breadcrumb-title">Teacher Profile</h4>
    <ul class="db-breadcrumb-list">
        <li><a href="#"><i class="fa fa-home"></i>Home</a></li>
        <li>Teacher Profile</li>
    </ul>
</div>

<div class="row">
    <!-- Your Profile Views Chart -->
    <div class="col-lg-12 m-b30">
        <div class="widget-box">
            <div class="wc-title">
                <h4>Teacher Profile</h4>
            </div>
            <div class="widget-inner">
                @using (Html.BeginForm("profile_update", "Teachers", FormMethod.Post))
                {
                    <form class="edit-profile m-b30">
                        <div class="row">
                            <div class="col-12">
                                <div class="ml-auto">
                                    <h3>1. Personal Details</h3>
                                </div>
                            </div>
                            <div class="form-group col-6">
                                <label class="col-form-label">Full Name</label>
                                <div>
                                    <input name="teacher_name" class="form-control" type="text" value="@tch.teacher_name">
                                </div>
                            </div>
                            <div class="form-group col-6">
                                <label class="col-form-label">Occupation</label>
                                <div>
                                    <input readonly class="form-control" type="text" value="Teacher">
                                </div>
                            </div>
                            <div class="form-group col-6">
                                <label class="col-form-label">Company Name</label>
                                <div>
                                    <input class="form-control" type="text" readonly value="Tutoronic">

                                </div>
                            </div>
                            <div class="form-group col-6">
                                <label class="col-form-label">Phone No.</label>
                                <div>
                                    <input name="teacher_contact" class="form-control" type="text" value="@tch.teacher_contact">
                                </div>
                            </div>

                            <div class="seperator"></div>
                            <div class="col-12">
                                <div class="ml-auto">
                                    <h3>2. Email & Password</h3>
                                </div>
                            </div>
                            <div class="form-group col-12">
                                <label class="col-form-label">Email</label>
                                <div>
                                    <input name="teacher_email" readonly class="form-control" type="email" value="@tch.teacher_email">
                                </div>
                            </div>
                            <div class="form-group col-12">
                                <label class="col-form-label">Password</label>
                                <div>
                                    <input class="form-control" type="password" value="@tch.teacher_password">
                                </div>
                            </div>
                            <div class="form-group col-12">
                                <label class="col-form-label">New Password</label>
                                <div>
                                    <input class="form-control" type="password">
                                </div>
                            </div>
                            <div class="form-group col-12">
                                <label class="col-form-label">Confirm Password</label>
                                <div>
                                    <input name="teacher_password" class="form-control" type="password" value="@tch.teacher_password">

                                </div>
                            </div>
                            <div class="col-12 m-t20">
                                <div class="ml-auto m-b5">
                                    <h3>2. Address</h3>
                                </div>
                            </div>
                            <div class="form-group col-12">
                                <label class="col-form-label">Address</label>
                                <div>
                                    <input name="teacher_address" class="form-control" type="text" value="@tch.teacher_address">
                                </div>
                            </div>
                            @*<div class="form-group col-6">
                                    <label class="col-form-label">City</label>
                                    <div>
                                        <input class="form-control" type="text" value="US">
                                    </div>
                                </div>
                                <div class="form-group col-6">
                                    <label class="col-form-label">State</label>
                                    <div>
                                        <input class="form-control" type="text" value="California">
                                    </div>
                                </div>
                                <div class="form-group col-6">
                                    <label class="col-form-label">Postcode</label>
                                    <div>
                                        <input class="form-control" type="text" value="000702">
                                    </div>
                                </div>*@
                            <div class="m-form__seperator m-form__seperator--dashed m-form__seperator--space-2x"></div>

                            <div class="col-12 m-t20">
                                <div class="ml-auto">
                                    <h3 class="m-form__section">3. Bio</h3>
                                </div>
                            </div>
                            <div class="form-group col-12">
                                <label class="col-form-label">Bio</label>
                                <div>
                                    <input name="teacher_intro" class="form-control" type="text" value="@tch.teacher_intro">
                                </div>
                            </div>

                            @*<div class="form-group col-6">
                                    <label class="col-form-label">Linkedin</label>
                                    <div>
                                        <input class="form-control" type="text" value="www.linkedin.com">
                                    </div>
                                </div>
                                <div class="form-group col-6">
                                    <label class="col-form-label">Facebook</label>
                                    <div>
                                        <input class="form-control" type="text" value="www.facebook.com">
                                    </div>
                                </div>
                                <div class="form-group col-6">
                                    <label class="col-form-label">Twitter</label>
                                    <div>
                                        <input class="form-control" type="text" value="www.twitter.com">
                                    </div>
                                </div>
                                <div class="form-group col-6">
                                    <label class="col-form-label">Instagram</label>
                                    <div>
                                        <input class="form-control" type="text" value="www.instagram.com">
                                    </div>
                                </div>*@
                            <div class="col-12">
                                <button type="submit" class="btn">Save changes</button>
                                <button type="reset" class="btn-secondry">Cancel</button>
                            </div>
                        </div>
                    </form>
                }
            </div>
        </div>
    </div>
    <!-- Your Profile Views Chart END-->
</div>
