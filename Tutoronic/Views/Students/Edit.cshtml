@model Tutoronic.Models.Student

@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>
<h3 style="color:red">@ViewBag.message</h3>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Student</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Student_id)

        <div class="form-group">
            <b>Student Name</b>
            <div class="col-md-10">
                @Html.EditorFor(model => model.student_name, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.student_name, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <b>Student Email</b>
            <div class="col-md-10">
                @Html.EditorFor(model => model.student_email, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.student_email, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <b>Student Password</b>
            <div class="col-md-10">
                @Html.EditorFor(model => model.student_password, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.student_password, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <b>Student Contact</b>
            <div class="col-md-10">
                @Html.EditorFor(model => model.student_contact, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.student_contact, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <b>Image</b>
            <div class="col-md-10">
                <img id="mypic" src="@Url.Content(Model.student_pic)" height="100" width="100" />
                <input type="file" name="pic" oninput="mypic.src = window.URL.createObjectURL(this.files[0])" />
                @Html.EditorFor(model => model.student_pic, new { htmlAttributes = new { @class = "form-control" } })
                
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.total_enrolment, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.total_enrolment, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.total_enrolment, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
