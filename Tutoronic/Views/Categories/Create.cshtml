@model Tutoronic.Models.Category

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout_adminpanel.cshtml";
}

<h2>Create</h2>
@Html.Raw(TempData["errormsg"])

@using (Html.BeginForm("create", "categories", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Category</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <b class="control-label col-md-2">Category Name</b>
            <div class="col-md-10">
                @Html.EditorFor(model => model.cat_name, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.cat_name, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <b class="control-label col-md-2">Image</b>
            <div class="col-md-10">
                <input name="pic" type="file" oninput="mypic.src = window.URL.createObjectURL(this.files[0])" />

                <img id="mypic" width="100" height="100" />

            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
