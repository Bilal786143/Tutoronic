@model Tutoronic.Models.Category

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout_adminpanel.cshtml";
}

<h2>Details</h2>

<div>
    <h4>Category</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            <b>Category Name</b>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.cat_name)
        </dd>

        <dt>
            <b>Category Image</b>
        </dt>

        <dd>
            <img src="@Url.Content(Model.cat_pic)" height="250" width="250" />
        </dd>

    </dl>
</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.Category_id }) |
    @Html.ActionLink("Back to List", "Index")
</p>
