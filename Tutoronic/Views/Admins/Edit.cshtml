@model Tutoronic.Response.GetAdminByIdResponse

@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>
@Html.Raw(TempData["errormsg"])

@using (Html.BeginForm("Edit", "Admins", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Admin</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Admin.AdminId)

        <div class="form-group">
            <b class="control-label col-md-2">Name</b>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Admin.AdminName, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Admin.AdminName, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <b class="control-label col-md-2">Email</b>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Admin.AdminEmail, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Admin.AdminEmail, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <b class="control-label col-md-2">Email</b>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Admin.AdminPassword, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Admin.AdminPassword, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <b class="control-label col-md-2">Image</b>
            <div class="col-md-10">
                <img src="@Url.Content(Model.Admin.AdminPic)" height="120" width="180" />
                <input type="file" name="pic" />
                @Html.EditorFor(model => model.Admin.AdminPic, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
            </div>
        </div>

        <div class="form-group">
            <b class="control-label col-md-2">Address</b>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Admin.AdminAddress, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Admin.AdminAddress, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <b class="control-label col-md-2">Contact</b>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Admin.AdminContact, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Admin.AdminContact, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "AllAdmins")
</div>
