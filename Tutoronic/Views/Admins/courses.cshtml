@using Tutoronic.Models;

@{
    Layout = "~/Views/Shared/_Layout_adminpanel.cshtml";
    Model1 db = new Model1();
}

<div class="db-breadcrumb">
    <h4 class="breadcrumb-title">Courses</h4>
    <ul class="db-breadcrumb-list">
        <li><a href="#"><i class="fa fa-home"></i>Home</a></li>
        <li>Courses</li>
    </ul>
</div>
<div class="row">
    <!-- Your Profile Views Chart -->
    <div class="col-lg-12 m-b30">
        <div class="widget-box">
            <div class="wc-title">
                <h4>All Courses</h4>
            </div>
            <div class="widget-inner">
                @foreach (var item in db.Courses.OrderBy(c => c.approve))
                {
                    <div class="card-courses-list admin-courses">
                        <div class="card-courses-media">
                            <img src="@Url.Content(item.course_pic)" alt="" />
                        </div>
                        <div class="card-courses-full-dec">
                            <div class="card-courses-title">
                                <h4>@item.course_name</h4>
                            </div>
                            <div class="card-courses-list-bx">
                                <ul class="card-courses-view">
                                    <li class="card-courses-user">
                                        <div class="card-courses-user-pic">
                                            <img src="@Url.Content(item.Teacher.teacher_pic)" alt="" />
                                        </div>
                                        <div class="card-courses-user-info">
                                            <h5>Teacher</h5>
                                            <h4>@item.Teacher.teacher_name</h4>
                                        </div>
                                    </li>
                                    <li class="card-courses-categories">
                                        <h5>Category</h5>
                                        <h4>@item.SubCategory.subcat_name</h4>
                                    </li>
                                    <li class="card-courses-review">
                                        <h5>3 Review</h5>
                                        <ul class="cours-star">
                                            <li class="active"><i class="fa fa-star"></i></li>
                                            <li class="active"><i class="fa fa-star"></i></li>
                                            <li class="active"><i class="fa fa-star"></i></li>
                                            <li><i class="fa fa-star"></i></li>
                                            <li><i class="fa fa-star"></i></li>
                                        </ul>
                                    </li>
                                    @if (item.approve == true)
                                    {
                                        <li class="card-courses-stats">
                                            <a href="#" class="btn button-sm success radius-xl">Approved</a>
                                        </li>
                                    }
                                    else
                                    {
                                        <li class="card-courses-stats">
                                            <a href="#" class="btn button-sm green radius-xl">Pending</a>
                                        </li>
                                    }
                                    <li class="card-courses-price">
                                        @*<del>$190</del>*@
                                        <h5 class="text-primary">$@item.course_price</h5>
                                    </li>
                                </ul>
                            </div>
                            <div class="row card-courses-dec">
                                <div class="col-md-12">
                                    <h6 class="m-b10">Course Description</h6>
                                    <p>@item.course_description</p>
                                </div>
                                <div class="col-md-12">
                                    <a href="@Url.Action("coursedetail","Admins", new { id=item.Course_id})" class="btn green radius-xl outline">Detail</a>
                                    <a href="#" class="btn red outline radius-xl ">Cancel</a>
                                </div>
                            </div>

                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
    <!-- Your Profile Views Chart END-->
</div>

