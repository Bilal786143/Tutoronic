@model Tutoronic.Response.GetAdminByIdResponse

@{
    ViewBag.Title = "Delete";
}

<h2>Delete</h2>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Admin</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            <b>Name</b>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Admin.AdminName)
        </dd>

        <dt>
            <b>Email</b>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Admin.AdminEmail)
        </dd>

        <dt>
            <b>Password</b>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Admin.AdminPassword)
        </dd>

        <dt>
            <b>Image</b>
        </dt>

        <dd>
            <img src="@Url.Content(Model.Admin.AdminPic)" height="120" width="180" />
        </dd>

        <dt>
            <b>Address</b>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Admin.AdminAddress)
        </dd>

        <dt>
            <b>Contact</b>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Admin.AdminContact)
        </dd>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-default" /> |
            @Html.ActionLink("Back to List", "AllAdmins")
        </div>
    }
</div>
