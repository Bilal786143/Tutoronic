@model Tutoronic.Response.GetCourseByIdResponse

@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>
<h3 style="color:red">@ViewBag.message</h3>
@Html.Raw(TempData["errormsg"])

@using (Html.BeginForm("edit", "Cours", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Cours</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Course.CourseId)

        <div class="form-group">
            <b class="control-label col-md-2">Course Name</b>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Course.CourseName, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Course.CourseName, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <b class="control-label col-md-2">Course Description</b>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Course.CourseDescription, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Course.CourseDescription, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <b class="control-label col-md-2">Course Image</b>
            <div class="col-md-10">
                <h3 style="color:red">@ViewBag.message</h3>
                <img id="mypic" src="@Url.Content(Model.Course.CourseImage)" height="100" width="100" />
                <input type="file" name="pic" oninput="mypic.src = window.URL.createObjectURL(this.files[0])" />
                @Html.EditorFor(model => model.Course.CourseImage, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Course.CoursePrice, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Course.CoursePrice, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Course.CoursePrice, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Course.SubCategoryId, "SubCategoryId", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("SubCategoryId", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Course.SubCategoryId, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
